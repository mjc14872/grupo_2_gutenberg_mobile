<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('./partials/head') %>
    </head>

    <body>
        <header>
            <%- include('./partials/header') %>
        </header>
        <form class="create-form" action="/user/perfil/<%= usuario.id %> ?_method=PATCH" method="POST" >
        <h2>visualizar Usuario</h2>

        <div>
            <br>
            <label>Nombres</label>
            <textarea name="nombres" id="nombres" class="form-input"><%= usuario.nombres %></textarea>
        </div>

        <div>
            <br>
            <label>Apellidos</label>
            <textarea name="apellidos" id="apellidos" class="form-input"><%= usuario.apellidos %></textarea>
        </div>

        
        <br>
        <div>
            <br>
            <label for="image" class="form-label">Avatar</label>
            <textarea type="file" name="image" id="image" class="form-control"><%= usuario.image %></textarea>
        </div>
        
        <br>
        <div>
            <br>
            <button type="submit" value="Guardar y volver al Home" class="boton-personalizado">Guardar</button>
        </div>

    </form>
    <footer>
        <%- include('./partials/footer') %>
    </footer>
    
</body> 